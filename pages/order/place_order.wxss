/* pages/order/order.wxss */
page{
  background-color: #F7F7F7;
}
.content{
  width: 100%;
}
.content form{
  display: block;
  margin: 0 auto;
  width: 90%;
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.content form .common{
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}
.content form .common image{
  margin-top: 20rpx;
  float: left;
  margin-right: 10rpx;
}
.content form .common input{
  height: 100rpx;
  line-height: 100rpx;
  
}
 .ok-btn{
  width: 100%;
  height: 100rpx;
  padding-top:70rpx; 
  background: #fff;
  display: flex;
  flex-direction: row;
  align-content: center;
  background-color: #F7F7F7;

} 
.submit{
  width: 70%;
  line-height: 100%;
  background-color: #FE5723;
  color: #fff;
  border-radius: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.bespeak{
  width: 30%;
  line-height: 100%;
  background-color: #FD9800;
  color: #fff;
  align-content: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  
}
.no-display{
  display: none;
}
.display{
  display: block;
}


.container{
  width: 100%;
  height: 100%;
}
.banner{
  width: 100%;
}
.order-list{
  width: 100%;
  margin: 20rpx auto;
  color: gray;
}
.order-title{
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-indent: 2rem;
  font-size: 30rpx;
}

.order-list .order-common{
  width: 100%;
  /* height: 450rpx; */
  float: left;
  margin-left: 2%;
  text-align: center;
}

.order-item{
  margin-bottom: 40rpx;
  background-color: #fff;
  height: 450rpx;
}
.order-item label{
  display: block;
  font-size: 30rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 1rem;
}
.order-item button{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  background-color: #77e35c;
  color: #fff;
}