page{
  display: flex;  
  flex-direction: column;  
  height: 100%;
  background: #fff;
}
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  color: #333;
  font-size: 35rpx;
}  
.navbar .item.active{  
  color: #F43F3F;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 40rpx;  
  right: 40rpx;  
  height: 5rpx;  
  background: #F43F3F;  
}  
.view_item{
  background: #F7F7F7;
  
}
.order_item{
  background: #fff;
  border: 1rpx solid #e4e4e4;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;  
  flex-direction: column;
}
.order_item .lable{
  font-size: 28rpx;
  color: #9b9b9b;
  margin-top: 5rpx;
}
.lable1{
  font-size: 30rpx;
  color: #444;
  margin-top: 5rpx;
}
.red{
  color: #F43F3F;
}
.order_empty{
  height: 100%;
  display: flex;  
  flex-direction: column;
  align-items: center;
  justify-content:center;
}

