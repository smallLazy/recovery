/* pages/address/add.wxss */
.content{
  width: 100%;
  font-size: 30rpx;
}
.content label{
  display: block;
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  float:left;
  text-align: left;
  margin-bottom: 30rpx;
  text-indent: 2rem;
}
.content input {
  margin-bottom: 30rpx; 
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
}
.picker input{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  float:left;
}
.content .add_detail{
  display: block;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left:2rem;   
  
}
.content button{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #d81e06;
  color: #fff;
  font-weight: bold;
  position: absolute;
  bottom:0;
}