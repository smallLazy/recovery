page {
  background-color: #fff;
}

.img_header {
  margin-top: 100rpx;
  width: 100%;
  height: min-content;
  display: flex;
  justify-content: center;
}

.textarea {
  width: 85%;
  height: 500rpx;
  border: 1px solid lightgray;
  border-radius: 10rpx;
  padding: 15rpx;
  color: #444;
}

.main_feed {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.view {
  width: 100%;
  height: min-content;
  display: flex;
  justify-content: center;
}

.btn {
  margin: 50rpx 40rpx 0 40rpx;
  height: 100rpx;
  background: #ff3f3f;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
}

.number-limit {
  display: flex;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.fr {
  font-size: 13px;
  color: #b9b9b9;
  margin-top: 20rpx;
}
