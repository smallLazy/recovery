page{
  background-color: #eee;
}
.container{
  width: 100%;
  height: 100%;
}
.banner{
  width: 100%;
}
.order-list{
  width: 100%;
  margin: 20rpx auto;
  color: gray;
}
.order-title{
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-indent: 2rem;
  font-size: 30rpx;
}

.order-list .order-common{
  width: 100%;
  /* height: 450rpx; */
  float: left;
  margin-left: 2%;
  text-align: center;
}

.order-item{
  margin-bottom: 40rpx;
  background-color: #fff;
  height: 450rpx;
}
.order-item label{
  display: block;
  font-size: 30rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 1rem;
}
.order-item button{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  background-color: #77e35c;
  color: #fff;
}